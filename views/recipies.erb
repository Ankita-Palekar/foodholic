<% @counter = 0%>
<% @recipies.each do |recipie| %>
	<%= if @counter == 0 
				"<div class='row'> <div class='span12'>"
			end%>
			<div class="span4 offset1">
				<ul class="thumbnails">
				  <li class="span12">
				    <div class="thumbnail">
				      <img data-src="holder.js/200x200" alt="">
				      <div class="recipie-highlight">
					      <p><a href='recipies/<%= "#{recipie.id}"%>'><%= recipie.title %></a></p>
					      <%= recipie.ratings.count %> <i class="icon-star"></i> 
				      </div>
				    </div>
				  </li>
				</ul>	
			</div>
	<% @counter = @counter + 1
		if @counter == 2
			@counter = 0 %>
	</div></div>
<%
	end
end%>
